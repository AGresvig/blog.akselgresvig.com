/* ===================
    GLOBAL FONTS
=================== */
body 
    font-family: 'PT Serif', serif !important
    //font-family: 'PT Sans', sans-serif;
    color: $bodyText

h1, h2, h3, h4, h5, h6
    font-family: 'GT Walsheim', sans-serif !important
    font-weight: normal
    color: $headerText
    text-transform: capitalize
    line-height: 1em

a
    color: #2aa198
    text-decoration: none

.subtle-text
    text-transform: lowercase
    color: $lightGrey
    font-size: .9em

.bolded
    font-weight: bold

.italic
    font-style: italic
    
.about
    .bio
        text-align: center
        color: $mediumGrey
        word-spacing: .1em
        .quote
          font-style: italic
    .social-links
        .icon
            font-size: 2em
            color: $cyan
        .icon:hover
            color: $base02
    
.footer-container footer
    h2, h3, h4, h5, h6, .icon, a
        color: #fff
    p, span
        color: $lightGrey
    a:hover
        color: $lightGrey
    .info
        .title
            font-size: 1.7em
            a
              color: $cyan
        .subtitle
            text-transform: uppercase
            color: $lighterGrey
            font-size: .8em
      .social-links
          .icon
              font-size: 1.5em
              color: $lighterGrey
          .icon:hover
              color: $lightGrey
    .techInfo
        color: $lighterGrey
        text-transform: lowercase
        font-variant: small-caps
        letter-spacing: .15em


//Make abbreviations stand out less
abbr
    font-variant: small-caps;
    font-weight: 700

//Indented paragraphs instead of space below them
p
    margin-bottom: 0

p + p 
    text-indent: 2em
    margin-top: 0

//Blockquote styling
blockquote
  color: $lightGrey
  font-style: italic


/*** Logo/Title ***/
.title
    font-family: 'GT Walsheim', sans-serif
    font-weight: bold
    a
        color: $cyan
    text-transform: capitalize
    font-size: 2.5em
    @media only screen and (min-width: 480px)
        font-size: 2.8em
    @media only screen and (min-width: 770px)
        font-size: 3.2em
    @media only screen and (min-width: 1140px)
        font-size: 3.5em

.subtitle
    font-family: 'GT Walsheim', sans-serif
    text-transform: uppercase
    letter-spacing: .2em
    font-size: 1em
    @media only screen and (min-width: 480px)
        font-size: 1.1em
    @media only screen and (min-width: 770px)
        font-size: 1.3em
    @media only screen and (min-width: 1140px)
        font-size: 1.4em
/*** End Logo/Title ***/

/*** Blogpost fonts **/
.post-summary
    font-style: italic
    font-size: 1.2em

.post-metadata.bolded li
    text-transform: uppercase

.latest.post-item,
.blogpost
    .post-title
        font-weight: bold
        font-size: 2.5em
        color: $headerText
        line-height: 1em
    footer.related
        h3
            color: $headerText
/*** End Blogpost fonts **/

/*** Icons ***/
.akselgresvig 
    .icon
        font-size: initial
    .icon-lg
        font-size: 1em

/* ============= End Fonts ================*/