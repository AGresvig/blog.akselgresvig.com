/** Usage
font-family: 'PT Sans', sans-serif;
font-family: 'PT Serif', serif;
font-family: 'Oswald', sans-serif;
font-family: 'Lato', sans-serif;
**/


/* ===================
    GLOBAL FONTS
=================== */
body 
    font-family: 'PT Serif', serif !important
    //font-family: 'PT Sans', sans-serif;
    color: $bodyText

h1, h2, h3, h4, h5, h6
    font-family: 'GT Walsheim', sans-serif !important
    font-weight: 400
    color: $headerText
    text-transform: capitalize
    line-height: 1em

a
    color: #2aa198
    text-decoration: none

.subtle-text
    text-transform: lowercase
    color: $lightGrey
    font-size: .9em

.bolded
    font-weight: bold

.italic
    font-style: italic
    
.main footer,
.main aside
    h3
        text-transform: uppercase
        color: $lightGrey
    .bio p
        color: $lightGrey
        font-style: italic

.footer-container footer
    h1, h2, h3, h4, h5, h6
        color: #fff
    p, span
        color: $lightGrey

//Make abbreviations stand out less
abbr
    font-variant: small-caps;
    font-weight: 700

//Indented paragraphs instead of space below them
p
    margin-bottom: 0

p + p 
    text-indent: 2em
    margin-top: 0

//Blockquote styling
blockquote
  color: $lightGrey
  font-style: italic


/*** Logo/Title ***/
.title
    font-family: 'GT Walsheim', sans-serif
    font-weight: 600
    a
        color: $cyan
    text-transform: capitalize
    font-size: 2.5em
    @media only screen and (min-width: 480px)
        font-size: 3em
    @media only screen and (min-width: 770px)
        font-size: 3.5em
    @media only screen and (min-width: 1140px)
        font-size: 4em

.subtitle
    font-family: 'GT Walsheim', sans-serif
    text-transform: uppercase
    letter-spacing: .2em
    font-size: 1em
    @media only screen and (min-width: 480px)
        font-size: 1.1em
    @media only screen and (min-width: 770px)
        font-size: 1.4em
    @media only screen and (min-width: 1140px)
        font-size: 1.5em

.footer-container footer .title
    font-size: 1.5em

/*** End Logo/Title ***/

/*** Blogpost fonts **/
.post-summary
    font-style: italic
    font-size: 1.2em

.post-metadata.bolded li
    text-transform: uppercase

.latest.post-item,
.blogpost
    .post-title
        font-weight: 600
        font-size: 2.5em
        color: $base01
        line-height: 1em
/*** End Blogpost fonts **/

/*** Icons ***/
.icon
    font-size: initial

.icon-lg
    font-size: 1em

/* ============= End Fonts ================*/