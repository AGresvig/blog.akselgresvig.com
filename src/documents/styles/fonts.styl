* This stylesheet contains only font-related stuff
***********/

/*
* I use Google Web Fonts.
* PT Sans for bodytext, PT Serif for headings, Oswall for logo/title
*/
@font-face {
  font-family: 'PT Serif';
  font-style: normal;
  font-weight: 400;
  src: local('PT Serif'), local('PTSerif-Regular'), url(http://themes.googleusercontent.com/static/fonts/ptserif/v5/sDRi4fY9bOiJUbgq53yZCXYhjbSpvc47ee6xR_80Hnw.woff) format('woff');
}
@font-face {
  font-family: 'PT Serif';
  font-style: normal;
  font-weight: 700;
  src: local('PT Serif Bold'), local('PTSerif-Bold'), url(http://themes.googleusercontent.com/static/fonts/ptserif/v5/QABk9IxT-LFTJ_dQzv7xpLrIa-7acMAeDBVuclsi6Gc.woff) format('woff');
}
@font-face {
  font-family: 'PT Serif';
  font-style: italic;
  font-weight: 400;
  src: local('PT Serif Italic'), local('PTSerif-Italic'), url(http://themes.googleusercontent.com/static/fonts/ptserif/v5/03aPdn7fFF3H6ngCgAlQzL3hpw3pgy2gAi-Ip7WPMi0.woff) format('woff');
}
@font-face {
  font-family: 'Oswald';
  font-style: normal;
  font-weight: 100;
  src: local('Oswald Light'), local('Oswald-Light'), url(http://themes.googleusercontent.com/static/fonts/oswald/v7/HqHm7BVC_nzzTui2lzQTDbO3LdcAZYWl9Si6vvxL-qU.woff) format('woff');
}
@font-face {
  font-family: 'Oswald';
  font-style: normal;
  font-weight: 400;
  src: local('Oswald Regular'), local('Oswald-Regular'), url(http://themes.googleusercontent.com/static/fonts/oswald/v7/qpy-UiLNKP-VfOdbcs6r6-vvDin1pK8aKteLpeZ5c0A.woff) format('woff');
}

/** Usage
font-family: 'PT Sans', sans-serif;
font-family: 'PT Serif', serif;
font-family: 'Oswald', sans-serif;
font-family: 'Lato', sans-serif;
**/


/* ===================
    GLOBAL FONTS
=================== */
body 
    font-family: 'PT Serif', serif !important
    //font-family: 'PT Sans', sans-serif;
    color: $bodyText

h1, h2, h3, h4, h5, h6
    font-family: 'Oswald', sans-serif !important
    font-weight: 100
    color: $headerText
    text-transform: capitalize
    line-height: 1em

a
    color: #2aa198
    text-decoration: none

.subtle-text
    text-transform: lowercase
    color: $lightGrey
    font-size: .9em

.bolded
    font-weight: bold

.italic
    font-style: italic
    
.main footer,
.main aside
    h3
        text-transform: uppercase
        color: $lightGrey
    .bio p
        color: $lightGrey
        font-style: italic

.footer-container footer
    h1, h2, h3, h4, h5, h6
        color: #fff
    p, span
        color: $lightGrey

//Make abbreviations stand out less
abbr
    font-variant: small-caps;
    font-weight: 700

//Indented paragraphs instead of space below them
p
    margin-bottom: 0

p + p 
    text-indent: 2em
    margin-top: 0

//Blockquote styling
blockquote
  color: $lightGrey
  font-style: italic


/*** Logo/Title ***/
.title
    font-family: 'Oswald', sans-serif
    font-weight: 400
    a
        color: $base01
        text-shadow: 1px 2px 2px $base03;
    text-transform: none
    line-height: 1em
    font-size: 3em
    letter-spacing: -.07em
    @media only screen and (min-width: 480px)
        font-size: 3.3em
    @media only screen and (min-width: 770px)
        font-size: 4em
    @media only screen and (min-width: 1140px)
        font-size: 4.5em

.subtitle
    font-family: 'Oswald', sans-serif
    text-transform: uppercase
    font-style: italic
    color: $orange
    font-size: 1em
    font-weight: 400
    @media only screen and (min-width: 480px)
        font-size: 1em
    @media only screen and (min-width: 770px)
        font-size: 1.4em
    @media only screen and (min-width: 1140px)
        font-size: 1.5em

.footer-container footer .title
    font-size: 1.5em

/*** End Logo/Title ***/

/*** Blogpost fonts **/
.post-summary
    font-style: italic

.post-metadata.bolded li
    text-transform: uppercase

.latest.post-item,
.blogpost
    .post-title
        font-weight: 400
        font-size: 2.5em
        color: $base01
        line-height: 1em
/*** End Blogpost fonts **/

/*** Icons ***/
.icon
    font-size: initial

.icon-lg
    font-size: 1em

/* ============= End Fonts ================*/