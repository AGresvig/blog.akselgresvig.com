/**
* Main styles
**/

/* ===================
    VARIABLES
    =================== */

//Breakpoints
$smartphone = 480px
$tablet = 770px
$desktop = 1140px

// "Solarized" color palette
$base01 = #586e75
$base02 = #073642
$base03 = #002b36
$base00 = #657b83
$base2 = #eee8d5
$orange = #cb4b16
$cyan = #2aa198


/* ===================
    IMPORTS
    =================== */

//Extra power! http://visionmedia.github.io/nib/
@import 'nib'
@import 'vendor/initializr.styl'
@import 'fonts.styl'


/* ===================
    General: Theme & layout
   =================== */
//Textured background on whole page
body.akselgresvig
    background-image: url('/images/styling/debut_light.png')

/*** some general icon styling ***/
.iconwrapper *
    vertical-align: middle
    display: inline-block

.icon
    font-size: initial
    vertical-align: middle
    padding: 0 0.2em 0.1em 0;
    + * //This selects the item directly following the icon
        padding-right: .4em

.icon-lg
    font-size: 1em
    padding: .4em

.header-container
    box-shadow: none
    border-top: 2px solid $cyan
    z-index: 100

    header 
        min-height:4em
        border-bottom: 2px solid $cyan

        @media only screen and (min-width: 480px)
            min-height: 4.5em
        @media only screen and (min-width: 770px)
            min-height: 5em
        @media only screen and (min-width: 1140px)
            min-height: 5.5em
        .logo-box
            text-align: center
            width: inherit
            height: 100%
            .title
                margin: .8em 0 0 0
                float: none
            .subtitle
                margin: .1em 0 .8em 0
                clear: left

.main-container
    z-index: 1
    
    .main article
        //Dont want sentences longer than max 90 chars
        max-width: 650px 

    .main aside
        @media only screen and (min-width: 770px)
            width: 28%
            padding: 0 0 10px 0
            margin-top: 5em;
        @media only screen and (min-width: 1140px)
            width: 30%
        
/** General containers **/
.container
    max-width: 380px;
    _width: 380px;
    margin: 0 auto;

/** IE < 9 warning box **/
.lt-ie9 #i8-warning
    margin: 20px auto
    width: 80%
    h1
        color: red
    p
        font-family: helvetica

//Blockquotes yo
blockquote
  margin: 2em 0
  padding: 0 2em
  border-left: 1px solid $lightGrey

/** Footer **/
.footer-container,
.main aside
    //border-top: 2px solid grey;
    box-shadow: none //0px 1px 4px rgba(0,0,0,.2);

footer .title
    float:none

.footer-container,
footer.wrapper
    background: $base03

.footer-container
    border-top: 3px solid $cyan
/** End footer **/

/* ============= End Theme & Layout ================*/


/* ===================
    Index page & blogpost page
   =================== */
.post-metadata 
    line-height: 1.2em
    margin: .5em 0
    *
        margin: 0 .1em
        display: inline-block 
    ul
        margin: 0
        padding: 0
    li a
        padding: 3px
        background-color: $base2
    li a:hover
        background-color: $base02

    .author
        //I include this on the page for Google authorship purposes
        //but I dont want to show it - there is only one author on this page..
        display: none

.previous.post-item .post-metadata 
    width: 65%

.post-item,
.blogpost
    margin-bottom: 4em
    position: relative

    .post-title
        margin-bottom: .1em
    
    .post-body 
        margin-top: 0
        display: block
    .divider 
        clear: both

    .earlier-posts
        margin-bottom: .4em
        color: #999
    footer.related
        h3
            color: $headerText
        ul
            margin: 0
    
.content .latest.post-item,
.content .blogpost
    .post-image
        margin: 2em 2%        
    .post-content 
        margin: 3em 2% 5em 2%       
    .post-image img
        width: 100%
    .post-body, .post-content 
        float: none
        width: initial
    .divider
        margin-top: 0
    
.mainpage .previous.post-item 
    @media only screen and (min-width: 770px)
        margin-right: -45% //We're making it span on the bigger screens

.previous.post-item     
    .post-title
        width: 65%
    .post-body 
        min-height: 5em;      
        .post-image
            opacity: .6
            float: right 
            width: 30%
            height: 100%
            overflow: hidden
            position: absolute
            bottom: 0.5em
            right: 0
            img //this is to try to center the pic. should probably create thumbs instead..
                position: absolute
                left: -100%

         .post-content              
            float: left
            width: 65%
            margin-bottom: 1em

        
/* ============= End Index & blogpost page ==============*/

/* ===================
    Sidebar
   =================== */
.about
    section
        margin-bottom: 2em

    .profile-pic img
        width: 150px
        border-radius: 88px;
        box-shadow: 0 0 8px rgba(0, 0, 0, .8);
        margin: 0 auto;
        display: block;
    
    .social-links
        ul
            padding: 0
            li
                display: inline-block
                .icon
                    color: $lightGrey
                    font-size: 2em
                    padding-right: .3em
                .icon:hover
                    color: $bodyText
    
//An attempt to override styles on the AddThis widget, its a little too attention-grabbing
.akselgresvig 
    #at4-share
        opacity: 0.4

        .at4-share-btn 
            background: rgb(232, 232, 232) !important

    #at4-share:hover
        opacity: 1
        

/* ============= End Sidebar ==============*/

/* ===================
    Comments
   =================== */
.content footer#comments 
    display: block;
    width: 100%;
    float: left;


/* ============= End Comments ==============*/

/* ===================
    Navigation 
   =================== */
header
    nav.nav-collapse 
        li a, li a:visited
            color: $lightGrey
            font-size: 1.2em
            text-transform: uppercase
        li.active a, a:hover, a:active
            color: $orange
            text-decoration: underline
    
    nav.nav-collapse.closed
        a
            background: none
    nav.nav-collapse.opened
        a
            background: $base03;
            margin: 0 0 10px 0
            padding: 15px 0;
            float: none
            width: 100%

/* ============= End Navigation ================*/



/* ===================
    Footer
   =================== */

/** Sticky footer **/
*
    margin: 0;

html, body
    height: 100%;

.main-container
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -8em;

.footer-container, 
.push
    height: 10em
    clear: both

.footer-container footer
    text-align: center
/* ============= End Footer ================*/
 