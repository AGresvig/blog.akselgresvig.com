//Extra power! http://visionmedia.github.io/nib/
@import 'nib'

/* ===================
    SITEWIDE FONTS
    =================== */

/*
* I use Google Web Fonts.
* PT Sans for bodytext, PT Serif for headings, Oswall for logo/title
*/
@import url(http://fonts.googleapis.com/css?family=PT\+Sans:400,700,400italic,700italic\|PT\+Serif:400,700,400italic\|Oswald:300,400,700\|Lato:100,300,400)

/** Usage
font-family: 'PT Sans', sans-serif;
font-family: 'PT Serif', serif;
font-family: 'Oswald', sans-serif;
font-family: 'Lato', sans-serif;
**/

body 
    font-family: 'PT Serif', serif;
    //font-family: 'PT Sans', sans-serif;
    color: #444

h1, h2, h3, h4, h5, h6
    //font-family: 'PT Serif', serif;
    //font-family: 'Lato', sans-serif
    font-family: 'Oswald', sans-serif
    font-weight: 100
    color: #222
    text-transform: capitalize

a
    color: #2aa198
    text-decoration: none

.main footer,
.main aside
    color: #444
    h3
        text-transform: uppercase

.footer-container footer
    h1, h2, h3, h4, h5, h6
        color: #fff
        text-transform: uppercase
    p, span
        color: #999

//Make abbreviations stand out less
abbr
    font-variant: small-caps;
    font-weight: 700

//Indented paragraphs instead of space below them
p
    margin-bottom: 0

p + p 
    text-indent: 2em
    margin-top: 0


/*** Logo/Title ***/
.title
.footer-container footer .title
    font-family: 'Oswald', sans-serif
    font-weight: 300
    text-transform: none
    color: #2aa198
    line-height: 1em
    
header .title
    font-size: 2.5em
    @media only screen and (min-width: 768px)
        font-size: 3em
    @media only screen and (min-width: 1140px)
        font-size: 3.5em

header h4.subtitle
    font-family: 'Oswald', sans-serif
    font-size: .7em //64px
    @media only screen and (min-width: 768px)
        font-size: .9em
    font-style: italic
    font-weight: 300
    color: #002b36

/*** End Logo/Title ***/

/* ============= End Fonts ================*/


