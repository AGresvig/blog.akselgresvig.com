/* Aksel */

//Extra power! http://visionmedia.github.io/nib/
@import 'nib'

/*** Variables ***/

// "Solarized" color palette
$base01 = #586e75
$base02 = #073642
$base03 = #002b36
$base00 = #657b83
$orange = #cb4b16
$cyan = #2aa198

//Fonts
$bodyText = #444
$headerText = #222
$lightGrey = #999


/* ===================
    SITEWIDE FONTS
    =================== */

/*
* I use Google Web Fonts.
* PT Sans for bodytext, PT Serif for headings, Oswall for logo/title
*/
@import url(http://fonts.googleapis.com/css?family=PT\+Sans:400,700,400italic,700italic\|PT\+Serif:400,700,400italic\|Oswald:300,400,700\|Lato:100,300,400)

/** Usage
font-family: 'PT Sans', sans-serif;
font-family: 'PT Serif', serif;
font-family: 'Oswald', sans-serif;
font-family: 'Lato', sans-serif;
**/

body 
    font-family: 'PT Serif', serif;
    //font-family: 'PT Sans', sans-serif;
    color: $bodyText

h1, h2, h3, h4, h5, h6
    //font-family: 'PT Serif', serif;
    //font-family: 'Lato', sans-serif
    font-family: 'Oswald', sans-serif
    font-weight: 100
    color: $headerText
    text-transform: capitalize

a
    color: #2aa198
    text-decoration: none

.main footer,
.main aside
    color: #444
    h3
        text-transform: uppercase

.footer-container footer
    h1, h2, h3, h4, h5, h6
        color: #fff
    p, span
        color: $lightGrey

//Make abbreviations stand out less
abbr
    font-variant: small-caps;
    font-weight: 700

//Indented paragraphs instead of space below them
p
    margin-bottom: 0

p + p 
    text-indent: 2em
    margin-top: 0


/*** Logo/Title ***/
.title
    font-family: 'Oswald', sans-serif
    font-weight: 400
    a
        color: $base01
        text-shadow: 1px 2px 2px $base03;
    text-transform: none
    line-height: 1em
    font-size: 3em
    letter-spacing: -.07em
    @media only screen and (min-width: 480px)
        font-size: 3.3em
    @media only screen and (min-width: 768px)
        font-size: 4em
    @media only screen and (min-width: 1140px)
        font-size: 4.5em

.subtitle
    font-family: 'Oswald', sans-serif
    text-transform: uppercase
    font-style: italic
    color: $orange
    font-size: 1em
    font-weight: 400
    @media only screen and (min-width: 480px)
        font-size: 1em
    @media only screen and (min-width: 768px)
        font-size: 1.4em
    @media only screen and (min-width: 1140px)
        font-size: 1.5em

.footer-container footer .title
    font-size: 1.5em

/*** End Logo/Title ***/

/*** Blogpost fonts **/
.blogpost
    .post-title
        font-weight: 400
        font-size: 2.5em
        color: $base01
/*** End Blogpost fonts **/

/* ============= End Fonts ================*/


/* ===================
    General: Theme & layout
   =================== */
.header-container
    background-image: url('/images/styling/debut_light@2X.png')
    box-shadow: 0px 1px 4px rgba(0,0,0,.2)
    border-top: 2px solid $cyan
    border-bottom: 1px solid $cyan
    z-index: 100

    header 
        position: relative
        .logo-box
            position: absolute
            height: 100%
            width: 20em
            .title , .subtitle
                position: absolute
                margin: 0
            .title
                bottom: -2px
                @media only screen and (min-width: 1140px)
                    bottom: -3px
            .subtitle
                bottom: 1.7em
                left: 5.6em
                @media only screen and (min-width: 480px)
                    bottom: 1.8em;
                    left: 6.2em;
                @media only screen and (min-width: 768px)
                    bottom: 1.85em;
                    left: 5.3em;
                @media only screen and (min-width: 1140px)
                    bottom: 1.92em;
                    left: 5.6em;

.main-container
    background-image: url('/images/styling/debut_light.png')
    z-index: 1
    
    .main .content
        @media only screen and (min-width: 768px)
            width: 69%
        @media only screen and (min-width: 1168px)
            width: 60%

    .main aside
        @media only screen and (min-width: 768px)
            width: 28%
            padding: 0 0 10px 0
        @media only screen and (min-width: 1168px)
            width: 30%
        
/** Footer **/
.footer-container,
.main aside
    //border-top: 2px solid grey;
    box-shadow: none //0px 1px 4px rgba(0,0,0,.2);

footer .title
    float:none

.footer-container,
footer.wrapper
    background: $base03

.footer-container
    border-top: 3px solid $cyan

/* ============= End Theme & Layout ================*/


/* ===================
    Index page & blogpost page
   =================== */
.post-metadata 
    width: 65%
    line-height: 1.2em
    text-transform: lowercase
    color: $lightGrey
    font-size: .9em
    margin: .5em 0
    *
        margin: 0 .1em
        display: inline-block 
    ul
        margin: 0
        padding: 0
    span
        margin-left: 0

.post-item,
.blogpost
    margin: 2em 0 4em 0
    position: relative

    .post-title
        margin-bottom: .1em
        line-height: 1em
    .post-body 
        margin-top: 0
        display: block

    .divider 
        clear: both

    .earlier-posts
        margin-bottom: .4em
        color: #999
    
article.content .latest.post-item,
article.content .blogpost
    .post-image
        margin: 2em 2%        
    .post-content 
        margin: 3em 2% 5em 2%       
    .post-image img
        width: 100%
    .post-body, .post-content 
        float: none
        width: initial
    .divider
        margin-top: 0
    
.previous.post-item 
    @media only screen and (min-width: 768px)
        margin-right: -45% //We're making it span on the bigger screens
    
    .post-title
        width: 65%
    .post-body 
        min-height: 5em;      
        .post-image
            float: right 
            width: 30%
            height: 100%
            overflow: hidden
            position: absolute
            bottom: 0.5em
            right: 0
            img //this is to try to center the pic. should probably create thumbs instead..
                position: absolute
                left: -100%

         .post-content              
            float: left
            width: 65%
            margin-bottom: 1em

        
/* ============= End Index & blogpost page ==============*/


/* ===================
    Navigation 
   =================== */
header
    nav.nav-collapse 
        li a, li a:visited
            color: $lightGrey
            font-size: 1.2em
            text-transform: uppercase
        li.active a, a:hover, a:active
            color: $orange
            text-decoration: underline
    
    nav.nav-collapse.closed
        a
            background: none
    nav.nav-collapse.opened
        a
            background: $base03;
            margin: 0 0 10px 0
            padding: 15px 0;
            float: none
            width: 100%

/* ============= End Navigation ================*/



/* ===================
    Footer
   =================== */

/** Sticky footer **/
*
    margin: 0;

html, body
    height: 100%;

.main-container
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -8em;

.footer-container, 
.push
    height: 10em
    clear: both

.footer-container footer
    text-align: center
/* ============= End Footer ================*/
 